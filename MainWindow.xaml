                                            <Button.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Text="انتخاب تصویر" Style="{StaticResource FarsiSmallTextBlock}"/>
                                                </ToolTip>
                                            </Button.ToolTip>
                                        </Button>
                                    </StackPanel>
                                    
                                    <Separator Grid.Row="2" Grid.ColumnSpan="3" Margin="0,10,0,0"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                               Text="دستگاه مختصات 3 بعدی" Style="{StaticResource FarsiTextBlock}" 
                                               Margin="20,15,0,0"/>

                                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                                                Margin="20,15,0,0" >
                                        <RadioButton FlowDirection="RightToLeft" IsThreeState="True" Content="گوشه ای" Margin="2,4,2,2" FontFamily="/AKP Math Graph Plotter;component/Fonts/Farsi/#B Koodak" 
                                                     IsChecked="{Binding Cor3DType,ElementName=WinMain,Converter={StaticResource EnumBoolConverter},ConverterParameter=Corneral}"
                                                     Checked="DrawCoordinateSystem3D"/>
                                        <RadioButton FlowDirection="RightToLeft" Content="مرکزی" Margin="8,4,2,2" FontFamily="/AKP Math Graph Plotter;component/Fonts/Farsi/#B Koodak" 
                                            IsChecked="{Binding Cor3DType,ElementName=WinMain,Converter={StaticResource EnumBoolConverter},ConverterParameter=Central}"
                                            Checked="DrawCoordinateSystem3D"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                                                Margin="20,5,0,0" >
                                        <RadioButton FlowDirection="RightToLeft" IsThreeState="True" Content="راستگرد" Margin="2,4,2,2" FontFamily="/AKP Math Graph Plotter;component/Fonts/Farsi/#B Koodak" 
                                                     Checked="DrawCoordinateSystem3D"/>
                                        <RadioButton FlowDirection="RightToLeft" Content="چپگرد" Margin="8,4,2,2" FontFamily="/AKP Math Graph Plotter;component/Fonts/Farsi/#B Koodak" 
                                            IsChecked="{Binding Cor3DType,ElementName=WinMain,Converter={StaticResource EnumBoolConverter},ConverterParameter=Central}"
                                            Checked="DrawCoordinateSystem3D"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" 
                                                Margin="20,10,0,0">
                                        <CheckBox IsChecked="{Binding CameraLight,ElementName=WinMain}" VerticalAlignment="Center" HorizontalAlignment="Left"
                                                  Checked="InitializeLight" Unchecked="InitializeLight" FlowDirection="LeftToRight"/>
                                        <TextBlock Text="منبع نور روی دوربین" FontWeight="Normal" Margin="5,0,5,0"
                                                   FontFamily="/AKP Math Graph Plotter;component/Fonts/Farsi/#B Koodak" />
