                                            Margin="0,10,0,0"/>

                                    <TextBlock Grid.Row="0" Grid.Column="2"  VerticalAlignment="Center" HorizontalAlignment="Left"
                                               Text="{Binding Acc,ElementName=WinMain,UpdateSourceTrigger=PropertyChanged}"
