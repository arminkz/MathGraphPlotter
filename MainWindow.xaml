                                                     IsChecked="{Binding ColoringMethod,ElementName=WinMain,Converter={StaticResource EnumBoolConverter},ConverterParameter=ByCor}"
                                                     Checked="AutoRedrawCM"/>

                                        <WrapPanel Orientation="Horizontal" 
                                                   IsEnabled="{Binding IsChecked,ElementName=ColorByCor}"  
                                                   Margin="2,7,2,2">
                                            <CheckBox Content="X" Margin="5,2,2,2" Checked="AutoRedrawCM" Unchecked="AutoRedrawCM" FlowDirection="LeftToRight" 
                                                      IsChecked="{Binding Path=ColorX,ElementName=WinMain,Mode=TwoWay}"/>
                                            <CheckBox Content="Y" Margin="10,2,2,2" Checked="AutoRedrawCM" Unchecked="AutoRedrawCM" FlowDirection="LeftToRight"
                                                      IsChecked="{Binding Path=ColorY,ElementName=WinMain,Mode=TwoWay}"/>
                                            <CheckBox Content="Z" Margin="10,2,2,2" Checked="AutoRedrawCM" Unchecked="AutoRedrawCM" FlowDirection="LeftToRight"
                                                      IsChecked="{Binding Path=ColorZ,ElementName=WinMain,Mode=TwoWay}"/>
                                            <CheckBox Content="W" Margin="10,2,2,2" Checked="AutoRedrawCM" Unchecked="AutoRedrawCM" FlowDirection="LeftToRight" Visibility="Collapsed"
                                                      IsChecked="{Binding Path=ColorW,ElementName=WinMain,Mode=TwoWay}"/>
                                        </WrapPanel>
                                    </StackPanel>

                                </Grid>

