    <!-- 2D / 3D / 4D Switch Button -->
    <Style x:Key="ThreeTwoDButton" TargetType="{x:Type Button}">
        <Setter Property="Focusable" Value="False" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding DrawMode,ElementName=WinMain}" Value="2D">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <StackPanel>
                                <Image Style="{StaticResource TwoDImage}" />
                            </StackPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding DrawMode,ElementName=WinMain}" Value="3D">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <StackPanel>
